{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/RoasterConfig",
  "title": "pi-roaster RoasterConfig",
  "description": "JSON Schema for .pi-roaster/roaster.json (Roaster runtime configuration).",
  "definitions": {
    "RoasterConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "infrastructure": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "contextBudget": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "compactionInstructions": {
                  "type": "string"
                },
                "compactionThresholdPercent": {
                  "type": "number"
                },
                "enabled": {
                  "type": "boolean"
                },
                "hardLimitPercent": {
                  "type": "number"
                },
                "maxInjectionTokens": {
                  "type": "number"
                },
                "minSecondsBetweenCompaction": {
                  "type": "number"
                },
                "minTurnsBetweenCompaction": {
                  "type": "number"
                },
                "pressureBypassPercent": {
                  "type": "number"
                },
                "truncationStrategy": {
                  "type": "string",
                  "enum": [
                    "drop-entry",
                    "summarize",
                    "tail"
                  ]
                }
              },
              "required": [
                "enabled",
                "maxInjectionTokens",
                "compactionThresholdPercent",
                "hardLimitPercent",
                "minTurnsBetweenCompaction",
                "minSecondsBetweenCompaction",
                "pressureBypassPercent",
                "truncationStrategy",
                "compactionInstructions"
              ]
            },
            "costTracking": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "actionOnExceed": {
                  "type": "string",
                  "enum": [
                    "warn",
                    "block_tools"
                  ]
                },
                "alertThresholdRatio": {
                  "type": "number"
                },
                "enabled": {
                  "type": "boolean"
                },
                "maxCostUsdPerSession": {
                  "type": "number"
                },
                "maxCostUsdPerSkill": {
                  "type": "number"
                }
              },
              "required": [
                "enabled",
                "maxCostUsdPerSession",
                "maxCostUsdPerSkill",
                "alertThresholdRatio",
                "actionOnExceed"
              ]
            },
            "events": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "dir": {
                  "type": "string"
                },
                "enabled": {
                  "type": "boolean"
                }
              },
              "required": [
                "enabled",
                "dir"
              ]
            },
            "interruptRecovery": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "gracefulTimeoutMs": {
                  "type": "number"
                }
              },
              "required": [
                "enabled",
                "gracefulTimeoutMs"
              ]
            }
          },
          "required": [
            "events",
            "contextBudget",
            "interruptRecovery",
            "costTracking"
          ]
        },
        "ledger": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "checkpointEveryTurns": {
              "type": "number"
            },
            "digestWindow": {
              "type": "number"
            },
            "path": {
              "type": "string"
            }
          },
          "required": [
            "path",
            "digestWindow",
            "checkpointEveryTurns"
          ]
        },
        "tape": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "checkpointIntervalEntries": {
              "type": "number"
            },
            "tapePressureThresholds": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "high": {
                  "type": "number"
                },
                "low": {
                  "type": "number"
                },
                "medium": {
                  "type": "number"
                }
              },
              "required": [
                "low",
                "medium",
                "high"
              ]
            }
          },
          "required": [
            "checkpointIntervalEntries",
            "tapePressureThresholds"
          ]
        },
        "parallel": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "maxConcurrent": {
              "type": "number"
            },
            "maxTotal": {
              "type": "number"
            }
          },
          "required": [
            "enabled",
            "maxConcurrent",
            "maxTotal"
          ]
        },
        "security": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "allowedToolsMode": {
              "description": "Controls how (required + optional) tool allowlists are applied.\n- off: only denied tools can block.\n- warn: allow but emit a warning event the first time a disallowed tool is called per (session, skill, tool).\n- enforce: block tool calls that are not in the allowlist (unless globally always-allowed).",
              "type": "string",
              "enum": [
                "off",
                "warn",
                "enforce"
              ]
            },
            "enforceDeniedTools": {
              "type": "boolean"
            },
            "sanitizeContext": {
              "type": "boolean"
            },
            "skillMaxParallelMode": {
              "description": "Controls how per-skill maxParallel is applied when acquiring parallel slots.\n- off: use global parallel config only.\n- warn: allow but emit a warning event when a skill exceeds its parallel cap.\n- enforce: reject parallel slot acquisitions once the cap is reached.",
              "type": "string",
              "enum": [
                "off",
                "warn",
                "enforce"
              ]
            },
            "skillMaxTokensMode": {
              "description": "Controls how per-skill budget.maxTokens is applied.\n- off: no enforcement.\n- warn: allow but emit a warning event when a skill exceeds its token budget.\n- enforce: block tool calls (except always-allowed lifecycle tools) once the budget is exceeded.",
              "type": "string",
              "enum": [
                "off",
                "warn",
                "enforce"
              ]
            }
          },
          "required": [
            "sanitizeContext",
            "enforceDeniedTools",
            "allowedToolsMode",
            "skillMaxTokensMode",
            "skillMaxParallelMode"
          ]
        },
        "skills": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "disabled": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "overrides": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "antiTags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "budget": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "maxTokens": {
                        "type": "number"
                      },
                      "maxToolCalls": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "maxToolCalls",
                      "maxTokens"
                    ]
                  },
                  "composableWith": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "consumes": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "costHint": {
                    "$ref": "#/definitions/SkillCostHint"
                  },
                  "escalationPath": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "maxParallel": {
                    "type": "number"
                  },
                  "name": {
                    "type": "string"
                  },
                  "outputs": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "stability": {
                    "type": "string",
                    "enum": [
                      "experimental",
                      "stable",
                      "deprecated"
                    ]
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "tier": {
                    "$ref": "#/definitions/SkillTier"
                  },
                  "tools": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "required": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "denied": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "optional": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "required",
                      "optional",
                      "denied"
                    ]
                  },
                  "version": {
                    "type": "string"
                  }
                }
              }
            },
            "packs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "roots": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "selector": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "k": {
                  "type": "number"
                },
                "maxDigestTokens": {
                  "type": "number"
                }
              },
              "required": [
                "k",
                "maxDigestTokens"
              ]
            }
          },
          "required": [
            "packs",
            "disabled",
            "overrides",
            "selector"
          ]
        },
        "verification": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "checks": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "quick": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "standard": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "strict": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "quick",
                "standard",
                "strict"
              ]
            },
            "commands": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "defaultLevel": {
              "$ref": "#/definitions/VerificationLevel"
            }
          },
          "required": [
            "defaultLevel",
            "checks",
            "commands"
          ]
        }
      },
      "required": [
        "skills",
        "verification",
        "ledger",
        "tape",
        "security",
        "parallel",
        "infrastructure"
      ]
    },
    "SkillCostHint": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "SkillTier": {
      "type": "string",
      "enum": [
        "base",
        "pack",
        "project"
      ]
    },
    "VerificationLevel": {
      "type": "string",
      "enum": [
        "quick",
        "standard",
        "strict"
      ]
    }
  }
}
