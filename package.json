{
  "name": "pi-roaster",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "packages/*",
    "distribution/*"
  ],
  "scripts": {
    "build": "bun run typecheck && bun run build:binaries",
    "build:binaries": "bun run script/build-binaries.ts",
    "generate:schema": "bun run script/generate-roaster-config-schema.ts",
    "typecheck": "tsc -b",
    "typecheck:test": "tsc -b test/tsconfig.json",
    "test:dist": "bun run typecheck && bun run script/verify-dist.ts",
    "test:docs": "bun test test/docs",
    "test": "bun test",
    "start": "bun run packages/roaster-cli/src/index.ts"
  },
  "devDependencies": {
    "@mariozechner/pi-coding-agent": "^0.52.12",
    "@pi-roaster/roaster-cli": "workspace:*",
    "@pi-roaster/roaster-extensions": "workspace:*",
    "@pi-roaster/roaster-runtime": "workspace:*",
    "@pi-roaster/roaster-tools": "workspace:*",
    "@types/node": "^25.2.3",
    "bun-types": "^1.3.9",
    "ts-json-schema-generator": "^2.5.0",
    "typescript": "^5.9.3"
  }
}
