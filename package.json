{
  "name": "brewva",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "distribution/*"
  ],
  "type": "module",
  "scripts": {
    "analyze:memory-recall": "bun run script/analyze-memory-recall.ts",
    "build": "bun run typecheck && bun run build:binaries",
    "build:binaries": "bun run script/build-binaries.ts",
    "check": "bun run format:check && bun run lint && bun run typecheck && bun run typecheck:test",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "format:docs": "git ls-files 'docs/**/*.md' 'docs/**/*.mdx' 'README.md' | xargs oxfmt --write",
    "format:docs:check": "git ls-files 'docs/**/*.md' 'docs/**/*.mdx' 'README.md' | xargs oxfmt --check",
    "generate:schema": "bun run script/generate-brewva-config-schema.ts",
    "install:local": "bash script/install-local.sh",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix && bun run format",
    "start": "bun run packages/brewva-cli/src/index.ts",
    "test": "bun test",
    "test:dist": "bun run typecheck && bun run script/verify-dist.ts",
    "test:docs": "bun test test/docs",
    "test:e2e": "bun test test/e2e --timeout 600000",
    "test:e2e:live": "bun run test:e2e:live:all",
    "test:e2e:live:all": "bun run test:e2e:live:core && bun run test:e2e:live:interactive",
    "test:e2e:live:core": "BREWVA_E2E_LIVE=1 bun test test/e2e/replay-and-persistence.live.test.ts test/e2e/tool-call-proof.live.test.ts test/e2e/task-spec.live.test.ts test/e2e/signal-handling.live.test.ts test/e2e/undo.live.test.ts test/e2e/print-and-json-modes.live.test.ts test/e2e/cost-tracking.live.test.ts test/e2e/microsandbox-isolation.live.test.ts --timeout 600000",
    "test:e2e:live:interactive": "BREWVA_E2E_LIVE=1 bun test test/e2e/interactive-multi-turn.live.test.ts --timeout 600000",
    "test:e2e:live:msb": "BREWVA_E2E_LIVE=1 BREWVA_E2E_MSB=1 bun test test/e2e/microsandbox-isolation.live.test.ts --timeout 600000",
    "test:webhook-smoke": "bun run script/smoke-telegram-webhook-edge.ts",
    "test:webhook-smoke:live": "bun run script/smoke-telegram-webhook-live.ts",
    "typecheck": "tsc -b",
    "typecheck:test": "tsc -b test/tsconfig.json",
    "uninstall:local": "bash script/install-local.sh --uninstall"
  },
  "devDependencies": {
    "@brewva/brewva-channels-telegram": "workspace:*",
    "@brewva/brewva-cli": "workspace:*",
    "@brewva/brewva-extensions": "workspace:*",
    "@brewva/brewva-gateway": "workspace:*",
    "@brewva/brewva-ingress": "workspace:*",
    "@brewva/brewva-runtime": "workspace:*",
    "@brewva/brewva-tools": "workspace:*",
    "@mariozechner/pi-coding-agent": "^0.55.0",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "bun-types": "^1.3.9",
    "oxfmt": "0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.14.1",
    "ts-json-schema-generator": "^2.5.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "packageManager": "bun@1.3.9"
}
